<?php   
session_start();
include 'db.php';

$result = $conn->query("SELECT * FROM products");

// Check if the user is logged in
$is_logged_in = isset($_SESSION['user_id']);
$cart_count = isset($_SESSION['cart']) ? count($_SESSION['cart']) : 0;
?>

