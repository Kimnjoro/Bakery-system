    <!-- Header with logout and cart count -->
    <div class="header">
        <?php if ($is_logged_in): ?>
            <div>
                <button onclick="window.location.href='logout.php';">Logout</button>
            </div>
            <div>
                <a href="cart.php">Cart <span class="cart-count"><?php echo $cart_count; ?></span></a>
            </div>
